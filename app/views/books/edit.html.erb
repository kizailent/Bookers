<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch  do |form| %>
  <div class="field">
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit "Update Book" %>
  </div>
<% end%>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>