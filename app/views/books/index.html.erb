<h1>Books</h1>
<!-- 全ての本を表示 -->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th><th></th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_with model:Book.new do |form| %>
  <h2>New book</h2>
  <!-- エラーメッセージを表示 -->
  <% if @book.errors.any? %>
    <div class="error-explain">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <p class="text-title">Title</p>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <p class="text-title">Body</p>
    <%= form.text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Book' %>
  </div>
<% end %>